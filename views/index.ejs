<!DOCTYPE html>
<html lang="es">

<head>
    <title> Home | MiPC </title>
    <%- include("partials/head.ejs") %>
</head>

<body>
    <header>
        <!--Header-escritorio-->
        <%- include("partials/header.ejs") %>
            <!-- Header hambuger  -->
            <%- include("partials/headerhambugerMenu.ejs")%>
    </header>
    <main>
        <div class="grid-contenedor-index">
            <div class="grid-slider">
                <div id="carouselExampleControls" class="carousel slide" class="carousel slide" data-interval="false">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/slider-image-02.jpg" alt="Cyber Monday 2021">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/slider-image-01.jpg" alt="Cyber Ofertas">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/slider-image-03.jpg" alt="Promo Bancarias">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="grid-contenedor-productos">
            <h2 class="tit-1">Productos destacados</h2>
            <div class="pro-destacados">
                <!--Producto Individual-->

                <% for (const item of products) { %>

                    <article class="individual">
                        <!--Ofert-->
                        <div class="cont-oferta">
                            <% if (item.descuento=="0" ){ %>
                                <p class="Soferta">-</p>
                                <% }else{ %>
                                    <p class="oferta"><strong>OFERTA:</strong> -<%= item.descuento %>% de descuento</p>
                                    <% } %>
                        </div>

                        <div class="contenedor-imagen">
                            <img class="img_ind" src="/images/productosPrueba/<%= item.image %>" alt="MacBook Pro 2019">
                        </div>

                        <div class="contenedor_info">
                            <!--Stock-->
                            <% if (item.piezas=="0" ){ %>
                                <p class="stock" style="color: #e23e4e;">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="9" height="9" fill="#e23e4e"
                                        class="bi bi-circle-fill" viewBox="0 0 16 16">
                                        <circle cx="8" cy="8" r="8" />
                                    </svg>
                                    Sin stock
                                </p>
                                <% }else{ %>
                                    <p class="stock" style="color: green">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="9" height="9" fill="green"
                                            class="bi bi-circle-fill" viewBox="0 0 16 16">
                                            <circle cx="8" cy="8" r="8" />
                                        </svg>
                                        <%= item.piezas %> piezas disponibles
                                    </p>
                                    <% } %>

                                        <h2 class="titulo_producto">
                                            <%= item.nombre_producto %>
                                        </h2>

                                        <p class="descrip_producto">
                                            <%= item.descripcion.substring(0,100) %>
                                        </p>
                                        <p class="descrip_producto"> <strong>SKU: </strong>
                                            <%= item.sku %>
                                        </p>





                                        </h3>
                                        <div class="atributos">

                                            <% if (item.descuento=="0" ){ %>
                                                <div>
                                                    <h3 class="precioNormal" style="color: white;"> -
                                                    </h3>
                                                    <h3 class="precio"> $<%= item.precio %>
                                                    </h3>
                                                    <p class="descrip_producto" style="color: white;"> <strong>Sin
                                                        </strong>
                                                        descuento
                                                    </p>
                                                </div>


                                                <% }else{ %>
                                                    <% const precioFinal=item.descuento / 100 * item.precio; %>
                                                        <div>
                                                            <h3 class="precioNormal"> $<%= item.precio %>
                                                            </h3>
                                                            <h3 class="precio"> $<%= item.precio - precioFinal %>
                                                            </h3>
                                                            <p class="descrip_producto"> <strong>Ahorras: </strong>
                                                                $<%= precioFinal %>
                                                            </p>
                                                        </div>
                                                        <% } %>
                                                            <div class="stars">
                                                                <span class="fa fa-star checked"></span>
                                                                <span class="fa fa-star checked"></span>
                                                                <span class="fa fa-star checked"></span>
                                                                <span class="fa fa-star"></span>
                                                                <span class="fa fa-star"></span>
                                                            </div>
                                        </div>
                                        <div class="agregar-carrito">
                                            <button class="btn1">
                                                <a href="/productDetail/<%= item.id %>" class="link">
                                                    <div class="contenedor_btn">
                                                        <p class="texto-carrito">Ver producto</p>
                                                        <svg class="icon-tienda" xmlns="http://www.w3.org/2000/svg"
                                                            width="16" height="16" fill="currentColor"
                                                            class="bi bi-basket2-fill" viewBox="0 0 16 16">
                                                            <path
                                                                d="M5.929 1.757a.5.5 0 1 0-.858-.514L2.217 6H.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h.623l1.844 6.456A.75.75 0 0 0 3.69 15h8.622a.75.75 0 0 0 .722-.544L14.877 8h.623a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1.717L10.93 1.243a.5.5 0 1 0-.858.514L12.617 6H3.383L5.93 1.757zM4 10a1 1 0 0 1 2 0v2a1 1 0 1 1-2 0v-2zm3 0a1 1 0 0 1 2 0v2a1 1 0 1 1-2 0v-2zm4-1a1 1 0 0 1 1 1v2a1 1 0 1 1-2 0v-2a1 1 0 0 1 1-1z" />
                                                        </svg>
                                                    </div>
                                                </a>
                                            </button>
                                        </div>
                        </div>
                    </article>

                    <% } %>


            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <%- include("partials/footer.ejs") %>

        <!-- Bootstrap - JS -->
        <%- include("partials/bootstrap_script.ejs") %>
</body>

</html>