<!--
	Aquí van los perfiles una ves que uno se logea/registra nos movemos aquí*
-->

<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head.ejs") %>
    <title>Perfil de usuario | MiPC</title>
</head>

<body>
  <header>
    <!--Header-escritorio-->
    <%- include("partials/header.ejs") %>
      <!-- Header hambuger  -->
      <%- include("partials/headerhambugerMenu.ejs")%>
  </header>
  <main>
    <div>
      <!-- Bloque principal de perfil-->
      <div class="grid-profile-img">
        <div>
          <!-- image-->
          <% if(user.image){ %>
            <img src="/images/users/<%= user.image %>" alt="avatar" />
          <% }else{ %>
            <img src="/images/users/default.jpg" alt="avatar default" />
          <% } %>
        </div>
        <div>
          <!--buttons-->
          <div>
            <a href="/user/profileEdit">
              <button type="button" class="btn btn-success">Editar perfil</button>
            </a>
          </div>
          <div>
            <a href="/user/logout">
              <button type="button" class="btn btn-success">Salir </button>
            </a>
          </div>
          <div>
            <a href="/purchase">
              <button type="button" class="btn btn-success">MiCarro </button>
            </a>
          </div>
          <div>
            <a href="/purchase">
              <button type="button" class="btn btn-success">MisCompras</button>
            </a>
          </div>
        </div>

      </div>
      <div class="grid-profile-info">
        <div>
          <%= user.name %>
        </div>
        <div>
          <%= user.username %>
        </div>
        <div>
          <%= user.email %>
        </div>
        <div>
          <%= user.password %>
        </div>
      </div>
    </div>



  </main>
  <!-- FOOTER -->
  <%- include("partials/footer.ejs") %>

</body>

</html>